    <form action="/compose" method="post">
        <div class="form-group"> 
            <label for="blogTitle">Title</label><br>
            <input type="text" name="blogTitle" class="form-control" id="blogTitle"><br>

            <label for="blogContent">Post</label><br>
            <textarea name="blogContent" id="blogContent" rows="10" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>

    </form>

